<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plain_text"
        android:id="@+id/plain_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_plain_text"
        android:layout_below="@+id/plain_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="none"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key"
        android:id="@+id/key"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_below="@+id/edit_plain_text"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edit_key"
        android:layout_below="@+id/key"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/encrypted_text"
        android:id="@+id/encrypted_text"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_below="@+id/edit_key"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_encrypted"
        android:layout_below="@+id/encrypted_text"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/edit_plain_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_accept"
        android:id="@+id/button_accept"
        android:layout_below="@+id/edit_encrypted"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:background="@android:drawable/btn_default" />


</RelativeLayout>
